
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script type="text/javascript">
        $(function () {
            $("#submitcode").click(function () {
                var phonenumber = $("#phonenumber").val();
                $.ajax({
                    type: "post",
                    url: "/Code/SendCode",
                    data: { phonenumber: phonenumber },
                    datatype: "json",
                    success: function (data) {
                        console.log(data);
                    }
                })
            })
        })
    </script>
</head>
<body>
    <div style="padding: 100px 100px 10px;">
        <form class="bs-example bs-example-form" role="form">
            <div class="input-group">
                <span class="input-group-addon">电话号码:</span>
                <input type="text" class="form-control" id="phonenumber" style="width:200px">
            </div>
            <div class="input-group" style="margin-top:30px">
                <button class="btn btn-success" type="button" style="width:120px" id="submitcode">获取短信验证码</button>
                <input type="text" class="form-control" style="width:170px">
            </div>
        </form>
    </div>
</body>
</html>
